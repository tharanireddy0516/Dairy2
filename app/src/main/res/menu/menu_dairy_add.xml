<?xml version="1.0" encoding="utf-8"?><!--xml layer starts here
xml stands for extensible markup language
it is a background code of layouts,widges etc-->
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--save the note-->
    <!-- android:enabled="true" is Shown by activity
      android:icon using internal icon i.e save to save the new note
      represents save function
      android:orderInCategory="1"is lowest the number higher in category
      app:showAsAction="always" shows the save button
     -->
    <item
        android:enabled="true"
        android:title="@string/save"
        android:id="@+id/action_save_note"
        android:icon="@android:drawable/ic_menu_save"
        android:orderInCategory="1"
        app:showAsAction="always"
        />

    <item android:id="@+id/addtodb"
        android:title="@string/add_to_db"
        app:showAsAction="always"
       />


    <!--Cancel the note-->
    <!-- android:enabled="true" is Shown by activity
     android:icon using internal icon i.e cancel
     represents revert function
     android:orderInCategory="10"is lowest the number higher in category
     app:showAsAction="ifRoom" hides the revert button
     Resource ID. A unique resource ID. To create a new resource ID for this item, use the form: "@+id/name".
     The plus symbol indicates that this should be created as a new ID.
    -->
    <item
        android:enabled="true"
        android:id="@+id/action_cancel"
        android:title="@string/cancel"
        android:icon="@android:drawable/ic_menu_revert"
        android:orderInCategory="10"
        app:showAsAction="ifRoom"
        />
</menu>
<!--Menus are additional options that are displayed by clicking the menu button of mobile
Menus are a common user interface component in many types of applications.
-->